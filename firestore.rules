service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwnerField() {
      return isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    function isOwnerResource() {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /products/{productId} {
      allow create: if isOwnerField();
      allow read, update, delete: if isOwnerResource();
    }

    match /sales/{saleId} {
      allow create: if isOwnerField();
      allow read, update, delete: if isOwnerResource();
    }

    match /transactions/{transactionId} {
      allow create: if isOwnerField();
      allow read, update, delete: if isOwnerResource();
    }

    match /inventories/{inventoryId} {
      allow create: if isOwnerField();
      allow read, update, delete: if isOwnerResource();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    match /userRoles/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /invoices/{invoiceId} {
      allow create: if isOwnerField();
      allow read, update, delete: if isOwnerResource();
    }

    match /settings/{userId} {
      allow read, write: if isSignedIn() && userId == request.auth.uid;
    }

    match /dashboardLayouts/{userId} {
      allow read, write: if isSignedIn() && userId == request.auth.uid;
    }
  }
}
