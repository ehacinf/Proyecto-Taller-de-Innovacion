service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userCompanyId() {
      return isSignedIn()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId
        : null;
    }

    function matchesRequestCompany() {
      return isSignedIn() && request.resource.data.companyId == userCompanyId();
    }

    function matchesResourceCompany() {
      return isSignedIn() && resource.data.companyId == userCompanyId();
    }

    match /products/{productId} {
      allow create: if matchesRequestCompany();
      allow read, update, delete: if matchesResourceCompany();
    }

    match /sales/{saleId} {
      allow create: if matchesRequestCompany();
      allow read, update, delete: if matchesResourceCompany();
    }

    match /transactions/{transactionId} {
      allow create: if matchesRequestCompany();
      allow read, update, delete: if matchesResourceCompany();
    }

    match /inventories/{inventoryId} {
      allow create: if matchesRequestCompany();
      allow read, update, delete: if matchesResourceCompany();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    match /userRoles/{userId} {
      allow read: if matchesResourceCompany() || (isSignedIn() && request.auth.uid == userId);
      allow write: if matchesRequestCompany();
    }

    match /invoices/{invoiceId} {
      allow create: if matchesRequestCompany();
      allow read, update, delete: if matchesResourceCompany();
    }

    match /settings/{companyId} {
      allow read, write: if isSignedIn() && companyId == userCompanyId();
    }

    match /dashboardLayouts/{companyId} {
      allow read, write: if isSignedIn() && companyId == userCompanyId();
    }
  }
}
